NEXT_PUBLIC_PROMOTE_BLOCKSCOUT_IN_TITLE=false
NEXT_PUBLIC_OG_DESCRIPTION="Viddahana Chain explorer - Block time 5s - Block reward 2 BTCD - Native coin BTCD"
