# BlockScout Environment Variables for Production

# Database
DATABASE_URL=postgresql://postgres:postgres@blockscout-db:5432/blockscout
ECTO_USE_SSL=false

# RPC Endpoints (Internal Docker)
ETHEREUM_JSONRPC_HTTP_URL=http://geth1:8545
ETHEREUM_JSONRPC_WS_URL=ws://geth1:8546
ETHEREUM_JSONRPC_VARIANT=geth

# Network Info
NETWORK=Viddahana Chain
SUBNETWORK=Block time ~5s | Block reward in BTCD
CHAIN_ID=202401
COIN=BTCD

# BlockScout Backend API
PORT=4002
BLOCKSCOUT_HOST=0.0.0.0

# Security
SECRET_KEY_BASE=0f82a34c7d0f4b139f0e4c29b875a1d2

# Features
API_V2_ENABLED=true
DISABLE_EXCHANGE_RATES=true
INDEXER_DISABLE_INTERNAL_TRANSACTIONS_FETCHER=false
EMISSION_FORMAT=POA
BLOCK_TRANSFORMER=clique

# Frontend - Production Domains
NEXT_PUBLIC_APP_HOST=geth-scan.asdchain.io
NEXT_PUBLIC_APP_PORT=443
NEXT_PUBLIC_APP_PROTOCOL=https

NEXT_PUBLIC_API_HOST=geth-api.asdchain.io
