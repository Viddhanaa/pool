# ===========================================
# VIDDHANA POOL - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# -----------------------------
# General
# -----------------------------
NODE_ENV=development
APP_URL=http://localhost:3000

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/viddhana_pool
DATABASE_POOL_SIZE=20

# -----------------------------
# Redis
# -----------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# -----------------------------
# Stratum Server (Go)
# -----------------------------
STRATUM_HOST=0.0.0.0
STRATUM_PORT=3333
STRATUM_MAX_CONNECTIONS=10000
STRATUM_DIFFICULTY=1

# -----------------------------
# Blockchain / Web3
# -----------------------------
# Kaspa
KASPA_NODE_URL=
KASPA_WALLET_ADDRESS=
KASPA_PRIVATE_KEY=

# Alephium
ALEPHIUM_NODE_URL=
ALEPHIUM_WALLET_ADDRESS=
ALEPHIUM_PRIVATE_KEY=

# Radiant
RADIANT_NODE_URL=
RADIANT_WALLET_ADDRESS=
RADIANT_PRIVATE_KEY=

# -----------------------------
# AI Layer
# -----------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AI_MODEL_PATH=/models

# -----------------------------
# Authentication
# -----------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=7d
SESSION_SECRET=your-session-secret-change-this

# -----------------------------
# External Services
# -----------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# -----------------------------
# Monitoring
# -----------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
LOG_LEVEL=debug

# -----------------------------
# Docker / Infrastructure
# -----------------------------
DOCKER_REGISTRY=
K8S_NAMESPACE=viddhana-pool
